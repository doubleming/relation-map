{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "temp",
    "sourceMap": false,
    "target": "es2016",
    "newLine": "LF",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "paths": {
      "@zs/relation": ["packages/relation/src/index.ts"],
      "@zs/relation-utils": ["packages/utils/src/index.ts"],
      "@zs/relation-compute": ["packages/compute/src/index.ts"],
    }
  },
  "include": [
    "scripts/**/*",
    "packages/**/*",
    // playground
    "play/src/vite-env.d.ts",
    "play/src/**/*"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}
